include	config

CPP	= @CXX@
INSTALL_PROGRAM = install

SRCS	= ncolorstring.cpp nhline.cpp nvline.cpp nscrollview.cpp nselectlist.cpp nview.cpp \
          ngroup.cpp nstatictext.cpp nform.cpp nprogram.cpp nmenu.cpp \
          kclog.cpp cfg.cpp srvdata.cpp mbstring.cpp net.cpp resultparse.cpp resultdom.cpp \
          mainprog.cpp infopanel.cpp mainwin.cpp msgwin.cpp taskwin.cpp tui-main.cpp  \
          cfgform.cpp topmenu.cpp about.cpp helpwin.cpp addprojectform.cpp addmgrform.cpp

OBJS	= $(patsubst %.cpp,$(ODIR)/%.o,$(SRCS))
LIBS    = @LIBS@
LDFLAGS = $(LIBS)
CXXFLAGS = @CXXFLAGS@
TARGET  = boinctui
ODIR	= .obj
SDIR	= src
exec_prefix = @prefix@
BINDIR = @bindir@
ifeq (@HAVE_OPENSSL@, 1)
    DEFS += -DHAVE_OPENSSL
endif

###############################################################################

all: createobj $(OBJS)
	@echo "\nLinking...\n"
	$(CPP) -o $(TARGET) $(OBJS) $(LDFLAGS)

$(ODIR)/%.o: $(SDIR)/%.cpp
	$(CPP) -c $(CXXFLAGS) $(DEFS) -o $(ODIR)/$*.o $< $(CPPFLAG)

clean:
	rm -f $(ODIR)/*.o $(TARGET)

install: all
	$(INSTALL_PROGRAM) -d $(DESTDIR)$(BINDIR)
	$(INSTALL_PROGRAM) $(TARGET) $(DESTDIR)$(BINDIR)

createobj:
	@if ! [ -d "$(ODIR)" ] ; then echo "crate $(ODIR)";  mkdir $(ODIR); fi

srctgz: clean all
	@if ! [ -d "../$(TARGET)-$(VERSION)" ] ; then echo "crate symlink ../$(TARGET)-$(VERSION)->$(notdir $(CURDIR))";  ln -n -s $(notdir $(CURDIR)) ../$(TARGET)-$(VERSION); fi
	cd ..; tar --exclude-vcs -vzcf $(TARGET)-$(VERSION).tar.gz \
	$(TARGET)-$(VERSION)/src \
	$(TARGET)-$(VERSION)/Makefile.in \
	$(TARGET)-$(VERSION)/configure.in \
	$(TARGET)-$(VERSION)/debian \
	$(TARGET)-$(VERSION)/redhat \
	$(TARGET)-$(VERSION)/config
